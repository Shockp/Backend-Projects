# Environment variables example file
# Copy this file to .env and update the values according to your environment

# Database Configuration
DB_URL=jdbc:postgresql://localhost:5432/personal_blog
DB_USERNAME=postgres
DB_PASSWORD=your_secure_password

# JWT Configuration
JWT_SECRET=your_very_secure_jwt_secret_key_at_least_256_bits
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0

# Email Configuration
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_FROM=noreply@personalblog.com
MAIL_FROM_NAME=Personal Blog

# File Upload Configuration
FILE_UPLOAD_DIR=./uploads
FILE_MAX_SIZE=10MB
FILE_ALLOWED_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# Application Configuration
APP_NAME=Personal Blog
APP_VERSION=1.0.0
APP_DESCRIPTION=A modern personal blog application
APP_BASE_URL=http://localhost:8080
SERVER_PORT=8080

# Security Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=*

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/application.log
LOG_MAX_SIZE=10MB
LOG_MAX_HISTORY=30

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Admin Configuration
ADMIN_EMAIL=admin@personalblog.com
ADMIN_PASSWORD=admin_secure_password
ADMIN_FIRST_NAME=Admin
ADMIN_LAST_NAME=User

# SSL Configuration (for production)
SSL_ENABLED=false
SSL_KEY_STORE=
SSL_KEY_STORE_PASSWORD=
SSL_KEY_STORE_TYPE=PKCS12

# Actuator Configuration
ACTUATOR_ENABLED=true
ACTUATOR_ENDPOINTS=health,info,metrics

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Search Configuration
SEARCH_ENABLED=true
SEARCH_INDEX_ON_STARTUP=false

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 0 2 * * ?
BACKUP_RETENTION_DAYS=30